<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/957579ac05.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body class="header">
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav class="nav navbar-left">
               <%= link_to root_path do %>
               <span class="title">Bookers</span>
               <% end %>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li class="fas fa-user-cog">
                <%= link_to ' Home', user_path(current_user), class: 'fas fa-home nav-link text-light' %>
                
                <!--<span class="glyphicon glyphicon-home" aria-hidden="true"></span>-->
                <%# end %>
              </li>
              <li class="fas fa-user-cog">
                <%= link_to users_path, class:"btn btn-link" do %>
                <span class="fas fa-users" aria-hidden="true">Users</span>
                <% end %>
              </li>
              <li class="fas fa-user-cog">
                <%= link_to books_path, class:"btn btn-link" do %>
                <span class="fas fa-book-open" aria-hidden="true">Books</span>
                <% end %>
              </li>
              <li class="fas fa-user-cog">
                <%= link_to destroy_user_session_path, method: :delete, class:"btn btn-link" do %>
                <span class="fas fa-sign-out-alt" aria-hidden="true">Logout</span>
                <% end %>
              </li>
            <% else %>
              <li class="fas fa-user-cog">
                <%= link_to root_path, class:"btn btn-link" do %>
                <span class="fas fa-home" aria-hidden="true">Home</span>
                <% end %>
              </li>
              <li class="fas fa-user-cog">
                <%= link_to home_about_path, class:"btn btn-link" do %>
                <span class="fas fa-link" aria-hidden="true">About</span>
                <% end %>
              </li>
              <li class="fas fa-user-cog">
                <%= link_to new_user_registration_path, class:"btn btn-link" do %>
                <span class="fas fa-user-plus" aria-hidden="true">sign up</span>
                <% end %>
              </li>
              <li class="fas fa-user-cog">
                <%= link_to new_user_session_path, class:"btn btn-link" do %>
                <span class="fas fa-sign-in-alt" aria-hidden="true">login</span>
                <% end %>
              </li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>
    <div class="body">
      <p class="notice"><%= notice %></p>

      <%= yield %>


        <footer>
          <p class="text-right"> CopyRight Infratop.inc</p>
        </footer>
      </div>
    </div>
  </body>
</html>